@model Store.BL.ViewModels.EmployeeVM

@{
    ViewData["Title"] = "Delete";
}

<center>
    <h1>Delete Employee</h1>

</center>

<div class="card">
    <form class="form-control" asp-controller="Employee" asp-action="Delete" method="post">
        <label asp-for="Id">Id</label>
        <input type="text" class="form-control" asp-for="Id"disabled>

        <br />
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" disabled>

        <br />
        <label asp-for="Code">Code</label>
        <input type="text" class="form-control" asp-for="Code" disabled>

        <br />

        <label asp-for="Phone">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" disabled>

        <br />

        <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back To Data</a>
        <input type="submit" value="Delete" class="btn btn-success" />
        <input type="reset" value="Cancel" class="btn btn-warning" />

    </form>
</div>
