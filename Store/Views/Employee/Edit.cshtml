@model Store.BL.ViewModels.EmployeeVM

@{
    ViewData["Title"] = "Edit";
}

<center>
    <h1>Edit</h1>

</center>

<div class="card">
    <form class="form-control" asp-controller="Employee" asp-action="Edit" method="post">
        <br />

            <img src="~/Files/Imgs/@Model.PhotoName" class="rounded mx-auto d-block shadow-lg " style="height:150px ; width:300px" alt="...">
            <br />

        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>

        <br />
        <label asp-for="Code">Code</label>
        <input type="text" class="form-control" asp-for="Code">
        <span asp-validation-for="Code" class="text-danger"></span>

        <br />

        <label asp-for="Phone">Phone</label>
        <input type="text" class="form-control" asp-for="Phone">
        <span asp-validation-for="Phone" class="text-danger"></span>

        <br />



        @*<img width="100" height="100" src="~/Files/Imgs/@Model.PhotoName" />*@


        <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back To Data</a>
        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id" type="submit" class="btn btn-danger">Delete</a>
        <input type="submit" value="Edit" class="btn btn-success" />
        <input type="reset" value="Cancel" class="btn btn-warning" />

    </form>
</div>
